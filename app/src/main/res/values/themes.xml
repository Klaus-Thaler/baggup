<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Baggup" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_10</item>
        <item name="colorPrimaryVariant">@color/black_10</item>
        <item name="colorOnPrimary">@color/black_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:buttonTint">@color/black_200</item>
        <item name="colorAccent">?attr/colorOnSecondary</item>
    </style>
    <style name="Theme.Baggup.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Baggup.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/black_700</item>
    </style>
    <style name="Theme.Baggup.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="dialog_textViews">
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:layout_marginLeft">12sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--new style is created here-->
    <style name="drawerStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/orange_700</item>
    </style>

</resources>
